# Paperless-NGX Configuration
PAPERLESS_URL=http://localhost:8000
PAPERLESS_TOKEN=your_paperless_api_token_here

# Ollama Configuration  
OLLAMA_BASE_URL=http://localhost:11434
# Lightweight model for faster responses and lower CPU usage
OLLAMA_MODEL=gemma2:2b
OLLAMA_EMBEDDING_MODEL=bge-m3

# Vector Database
VECTOR_DB_PATH=./data/vector_db
COLLECTION_NAME=paperless_documents

# Chunking Configuration (optimized for BGE-M3)
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# BGE-M3 Hybrid Search Weights (dense + sparse + colbert)
# Sparse is good for exact keywords (names, IDs, etc.)
BGE_M3_DENSE_WEIGHT=0.4
BGE_M3_SPARSE_WEIGHT=0.4
BGE_M3_COLBERT_WEIGHT=0.2

# Performance Optimizations
BGE_M3_USE_FP16=true
BGE_M3_MAX_LENGTH=8192
RERANK_TOP_K=10
