# Paperless-NGX Configuration
PAPERLESS_URL=http://localhost:8000
PAPERLESS_TOKEN=your_paperless_api_token_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b

# Vector Database
VECTOR_DB_PATH=./data/vector_db
COLLECTION_NAME=paperless_documents

# Chunking Configuration (optimized for BGE-M3's 8K context window)
# Larger chunks = more context per chunk, fewer total chunks
CHUNK_SIZE=2000
CHUNK_OVERLAP=300

# BGE-M3 Hybrid Search Weights (dense + sparse + colbert)
# Sparse weighted higher for exact keyword matching (names, dates, numbers)
BGE_M3_DENSE_WEIGHT=0.3
BGE_M3_SPARSE_WEIGHT=0.5
BGE_M3_COLBERT_WEIGHT=0.2

# Performance Optimizations
BGE_M3_USE_FP16=true
BGE_M3_MAX_LENGTH=8192
RERANK_TOP_K=20
